<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.TilePane?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
      </HBox>
      <FlowPane fx:id="tags" />
      <FlowPane fx:id="assignments" />
      <FlowPane fx:id="comments" />
      <FlowPane  alignment="BOTTOM_LEFT" hgap="10" vgap="10">
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" prefWidth="150" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="telegramHandle" styleClass="cell_small_label" text="\$telegramHandle" prefWidth="250"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="email" styleClass="cell_small_label" text="\$email" prefWidth="250" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="attendance" styleClass="cell_small_label" text="\$attendance" prefWidth="250"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Hyperlink fx:id="telegramLink" text="Contact" styleClass="cell_small_label" onAction="#openLink"
                   userData="\$telegramLink" prefWidth="150" />
      </FlowPane>
    </VBox>
  </GridPane>
</HBox>
